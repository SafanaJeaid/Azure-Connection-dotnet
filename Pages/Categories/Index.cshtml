@page
@model AbbyTryout.Pages.Categories.IndexModel

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<form method="post">
				<input type="submit" value="Export" asp-page-handler="Export" />
				<button class="btn btn-primary">ExportExcel</button>
	        </form>
@*			<a asp-page="create" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> &nbsp;Export data to excel
			</a>*@
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Location
				</th>
				<th>
					Oracle Chairs
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
@*			before any c# code we add @*@
			@foreach (var obj in Model.AlhasrTabel)
			{
				<tr>
					<td width="50%">@obj.location</td>
					<td width="30%">@obj.Title</td>
					<td>
						<div class="w-75 btn-group" role="group">
						<a asp-page="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i>
						</a>
						<a asp-page="Delete" asp-route-id="@obj.ID"  class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill"></i>
						</a>
						</div>
					</td>
				</tr>
			}
			
		</tbody>
	</table>

</div>
