        <div class="mb-3">
            <label asp-for="AlhasrTabel.location"></label>
            <input asp-for="AlhasrTabel.location" class="form-control" />
            <span asp-validation-for="AlhasrTabel.location" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AlhasrTabel.building"></label>
            <input asp-for="AlhasrTabel.building" class="form-control" />
            <span asp-validation-for="AlhasrTabel.building" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AlhasrTabel.roomlabel"></label>
            <input asp-for="AlhasrTabel.roomlabel" class="form-control" />
            <span asp-validation-for="AlhasrTabel.roomlabel" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AlhasrTabel.department"></label>
