            <span asp-validation-for="AlhasrTabel.roomactivity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AlhasrTabel.Modified"></label>
            <input asp-for="AlhasrTabel.Modified" class="form-control" />
            <span asp-validation-for="AlhasrTabel.Modified" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;"> Back to List</a>
    </div>

</form>